<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClientsApp.ViewModels"
             xmlns:models="clr-namespace:ClientsApp.Models"
             x:DataType="viewmodels:ClientsViewModel"
             x:Class="ClientsApp.Views.ClientsPage"
             Title="Lista de Clientes">

    <Grid RowDefinitions="*">
        <RefreshView Command="{Binding LoadClientsAsyncCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Clients}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Client">
                        <Border Stroke="{StaticResource SteampunkLeather}"
                        StrokeThickness="2"
                        Margin="15,10"
                        Padding="5"
                        BackgroundColor="{StaticResource SteampunkBrass}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8"/>
                            </Border.StrokeShape>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientsViewModel}}, Path=GoToEditClientPageAsyncCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,*" ColumnDefinitions="*,Auto" Padding="10">

                                <!-- Rebites nos cantos (detalhe visual) -->
                                <Ellipse Fill="{StaticResource SteampunkLeather}" WidthRequest="8" HeightRequest="8" HorizontalOptions="Start" VerticalOptions="Start"/>
                                <Ellipse Fill="{StaticResource SteampunkLeather}" WidthRequest="8" HeightRequest="8" HorizontalOptions="End" VerticalOptions="Start"/>
                                <Ellipse Fill="{StaticResource SteampunkLeather}" WidthRequest="8" HeightRequest="8" HorizontalOptions="Start" VerticalOptions="End" Grid.Row="1"/>
                                <Ellipse Fill="{StaticResource SteampunkLeather}" WidthRequest="8" HeightRequest="8" HorizontalOptions="End" VerticalOptions="End" Grid.Row="1" Grid.Column="1"/>

                                <!-- Container para as informações do cliente -->
                                <VerticalStackLayout Grid.Column="0" Grid.RowSpan="2" Spacing="5" VerticalOptions="Center">
                                    <!-- Nome e Sobrenome -->
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="{Binding Name}" FontFamily="FellEnglish" FontSize="24" TextColor="{StaticResource SteampunkText}" />
                                        <Label Text="{Binding LastName}" FontFamily="FellEnglish" FontSize="24" TextColor="{StaticResource SteampunkText}" />
                                    </HorizontalStackLayout>
                                    <!-- Idade -->
                                    <Label Text="{Binding Age, StringFormat='Idade: {0}'}" FontFamily="FellEnglish" FontSize="16" TextColor="{StaticResource SteampunkText}" />
                                    <!-- Endereço -->
                                    <Label Text="{Binding Address}" FontFamily="FellEnglish" FontSize="16" TextColor="{StaticResource SteampunkText}" />
                                </VerticalStackLayout>

                                <!-- Botões de Ação -->
                                <HorizontalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Spacing="10" VerticalOptions="Center">
                                    <!-- Ícone de Editar Steampunk -->
                                    <ImageButton Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientsViewModel}}, Path=GoToEditClientPageAsyncCommand}"
                                         CommandParameter="{Binding .}"
                                         WidthRequest="32" HeightRequest="32"
                                         Source="edit_gear_icon.png"/>
                                    <!-- Ícone de Excluir Steampunk -->
                                    <ImageButton Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClientsViewModel}}, Path=DeleteClientAsyncCommand}"
                                         CommandParameter="{Binding .}"
                                         WidthRequest="32" HeightRequest="32"
                                         Source="delete_cross_icon.png"/>
                                </HorizontalStackLayout>
                            </Grid>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="Nenhum cliente encontrado" FontSize="18" TextColor="{StaticResource Gray500}" />
                        <Label Text="Adicione um novo cliente no botão '+'" FontSize="14" TextColor="{StaticResource Gray300}" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.Row="0" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center" />

        <ImageButton Source="add_gear_icon.png"
                     Command="{Binding GoToAddClientPageAsyncCommand}"
                     WidthRequest="60"
                     HeightRequest="60"
                     VerticalOptions="End" HorizontalOptions="End"
                     Margin="20" />
    </Grid>
</ContentPage>