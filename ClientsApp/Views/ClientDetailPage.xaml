<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClientsApp.ViewModels"
             x:DataType="viewmodels:ClientDetailViewModel"
             x:Class="ClientsApp.Views.ClientDetailPage"
             Title="{Binding Title}"
             BackgroundColor="Transparent">

    <Grid>
        <!-- Fundo semi-transparente que fecha o popup ao ser tocado -->
        <BoxView BackgroundColor="#80000000">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CancelAsyncCommand}" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Conteúdo do Popup -->
        <Border VerticalOptions="Center" HorizontalOptions="Center"
                Stroke="{StaticResource CyberpunkLeather}" StrokeThickness="2"
                BackgroundColor="{StaticResource CyberpunkBackground}"
                WidthRequest="380"
                Padding="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="8"/>
            </Border.StrokeShape>

            <ScrollView>
                <VerticalStackLayout Spacing="10" Margin="20">
                    <Label Text="{Binding Title}" Style="{StaticResource CyberpunkLabel}" FontSize="22" HorizontalOptions="Center" Margin="0,0,0,10"/>

                    <Label Text="Nome" Style="{StaticResource CyberpunkLabel}" />
                    <Border Style="{StaticResource CyberpunkEntryBorder}">
                        <Entry Text="{Binding Name}" Placeholder="Nome do cliente" Style="{StaticResource CyberpunkEntry}" />
                    </Border>

                    <Label Text="Sobrenome" Style="{StaticResource CyberpunkLabel}" />
                    <Border Style="{StaticResource CyberpunkEntryBorder}">
                        <Entry Text="{Binding LastName}" Placeholder="Sobrenome do cliente" Style="{StaticResource CyberpunkEntry}" />
                    </Border>

                    <Label Text="Endereço" Style="{StaticResource CyberpunkLabel}" />
                    <Border Style="{StaticResource CyberpunkEntryBorder}">
                        <Entry Text="{Binding Address}" Placeholder="Endereço do cliente" Style="{StaticResource CyberpunkEntry}" />
                    </Border>

                    <Label Text="Idade" Style="{StaticResource CyberpunkLabel}" />
                    <Border Style="{StaticResource CyberpunkEntryBorder}">
                        <Entry Text="{Binding Age}" Keyboard="Numeric" Placeholder="Idade do cliente" Style="{StaticResource CyberpunkEntry}" />
                    </Border>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                        <Button Grid.Column="0" Text="Cancelar" Command="{Binding CancelAsyncCommand}" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource CyberpunkSecondaryButton}" />
                        <Button Grid.Column="1" Text="Salvar" Command="{Binding SaveClientAsyncCommand}" IsEnabled="{Binding IsNotBusy}" Style="{StaticResource CyberpunkPrimaryButton}" />
                    </Grid>

                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" />
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>