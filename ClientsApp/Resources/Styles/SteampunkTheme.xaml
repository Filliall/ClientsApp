<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores primárias do tema Steampunk -->
    <Color x:Key="SteampunkBrass">#C8A464</Color>
    <Color x:Key="SteampunkCopper">#B87333</Color>
    <Color x:Key="SteampunkWood">#6F4F28</Color>
    <Color x:Key="SteampunkLeather">#8B4513</Color>
    <Color x:Key="SteampunkBackground">#F3EAD3</Color> <!-- Cor de pergaminho/papel antigo -->
    <Color x:Key="SteampunkText">#3D2B1F</Color> <!-- Sépia escuro -->

    <!-- Estilos para formulários -->
    <Style x:Key="SteampunkLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource SteampunkText}" />
        <Setter Property="FontFamily" Value="FellEnglish" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="0,10,0,5" />
    </Style>

    <Style x:Key="SteampunkEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource SteampunkText}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource SteampunkWood}" />
        <Setter Property="FontFamily" Value="FellEnglish" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Usamos um Frame para criar a aparência de placa de metal para os campos de texto -->
    <Style x:Key="SteampunkEntryFrame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SteampunkBrass}" />
        <Setter Property="BorderColor" Value="{StaticResource SteampunkLeather}" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <Style x:Key="SteampunkPrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SteampunkLeather}" />
        <Setter Property="TextColor" Value="{StaticResource SteampunkBackground}" />
        <Setter Property="FontFamily" Value="FellEnglish" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderColor" Value="{StaticResource SteampunkWood}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>

    <Style x:Key="SteampunkSecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource SteampunkBrass}" />
        <Setter Property="TextColor" Value="{StaticResource SteampunkText}" />
        <Setter Property="FontFamily" Value="FellEnglish" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="BorderColor" Value="{StaticResource SteampunkLeather}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="HeightRequest" Value="50" />
    </Style>
</ResourceDictionary>
